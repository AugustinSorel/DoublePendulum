<Window x:Class="DoublePendulum.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DoublePendulum"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        KeyDown="Window_KeyDown"
        Topmost="True"
        Title="MainWindow" Height="800" Width="800">
    <Canvas Name="canvas" Background="{Binding Source={x:Static local:GlobalColors.BackgroundColor}}">
        
        
        <Line Name="firstArm" Stroke="White" StrokeThickness="2"/>
        <Line Name="secondArm" Stroke="White" StrokeThickness="2"/>
        
        
        <Path Fill="White">
            <Path.Data>
                <EllipseGeometry x:Name="firstCircle"/>
            </Path.Data>
        </Path>

        <Path Fill="White">
            <Path.Data>
                <EllipseGeometry x:Name="secondCircle"/>
            </Path.Data>
        </Path>
    </Canvas>
</Window>
